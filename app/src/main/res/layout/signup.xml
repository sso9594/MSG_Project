<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/signup_image"
        android:layout_width="255dp"
        android:layout_height="224dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/msg_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/enter_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:text="Name"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/enter_name"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_below="@id/enter_name_label"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edge"
            android:hint="  Enter your name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/enter_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="69dp"
            android:text="ID"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/enter_id"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_below="@id/enter_id_label"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edge"
            android:hint="  Enter your ID" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/enter_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="69dp"
            android:text="Password"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/enter_password"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_below="@id/enter_password_label"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edge"
            android:hint="  Enter your password"
            android:inputType="textPassword" />

    </RelativeLayout>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Sign Up" />

</LinearLayout>
